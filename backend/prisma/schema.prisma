// Prisma Schema for YouTube Video Management Dashboard
// Database: SQLite (for local dev)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model - stores authenticated users from Google OAuth
model User {
  id            String   @id @default(cuid())
  googleId      String   @unique
  email         String   @unique
  name          String?
  avatarUrl     String?
  channelId     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  oauthToken    OAuthToken?
  videos        Video[]
  notes         Note[]
  eventLogs     EventLog[]
}

// OAuthToken model - securely stores OAuth tokens
model OAuthToken {
  id                    String    @id @default(cuid())
  userId                String    @unique
  accessToken           String
  refreshToken          String
  accessTokenExpiresAt  DateTime
  scope                 String
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Video model - stores video metadata cache
model Video {
  id              String   @id @default(cuid())
  youtubeVideoId  String
  userId          String
  title           String
  description     String?
  thumbnailUrl    String?
  viewCount       Int      @default(0)
  likeCount       Int      @default(0)
  commentCount    Int      @default(0)
  publishedAt     DateTime?
  privacyStatus   String   @default("unlisted")
  lastSyncedAt    DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes           Note[]

  @@unique([youtubeVideoId, userId])
}

// Note model - user notes tied to videos
model Note {
  id        String   @id @default(cuid())
  content   String
  tags      String   @default("[]") // JSON string array of tags
  videoId   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// EventLog model - comprehensive event logging
model EventLog {
  id        String   @id @default(cuid())
  eventType String
  metadata  String?  // JSON string for metadata
  userId    String?
  timestamp DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}
