generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



model User {
  id        String   @id @default(cuid())
  googleSub String   @unique
  email     String?
  name      String?
  avatarUrl String?
  createdAt DateTime @default(now())

  tokens OAuthToken?
  notes  Note[]
  events EventLog[]
}

model OAuthToken {
  userId                String   @id
  user                  User     @relation(fields: [userId], references: [id])
  refreshTokenEncrypted String
  scope                 String?
  expiry                DateTime?
  updatedAt             DateTime @updatedAt
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  videoId   String
  title     String?
  body      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tags NoteTag[]
}

model NoteTag {
  noteId String
  note   Note   @relation(fields: [noteId], references: [id])
  tag    String

  @@id([noteId, tag])
}

model EventLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  videoId   String?
  eventType String
  source    String
  payload   Json?
  createdAt DateTime @default(now())
}
